@model Publicaciones.Web.ViewModels.Models.GetEmpViewModel

@{
    ViewData["Title"] = "Details";
    // Layout = "~/Views/_ViewImports.cshtml";
}


 <div class="col-6 offset-3 mt-3" style="font-family:'Times New Roman', Times, serif">
    <div class="card" style="width:600px">
        <div class="card-header">
            <h4>Employee Profile</h4>
            <hr />
        </div>
        <div class="card-body">
            <dl class="row">

                <dt class="col-sm-3">Employee ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmpID)</dd>

                <dt class="col-sm-3">First Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-3">Last Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-3">Job Level:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Joblvl)</dd>

                <dt class="col-sm-3">Hire Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HireDate)</dd>
                
                <dt class="col-sm-3">Job Description:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobDescription)</dd>

                <dt class="col-sm-3">Publisher Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PubName)</dd>

                <dt class="col-sm-3">City:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

                <dt class="col-sm-3">Country:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

                <dt class="col-sm-3">State:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.State)</dd>
            </dl>
        </div>
        <div class="card-footer">
            @Html.ActionLink("Edit", "Edit", new { id = Model.EmpID }, new { @class = "btn btn-primary" }) |
            <a asp-action="index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    h1{
        text-align:center;
    }
</style>