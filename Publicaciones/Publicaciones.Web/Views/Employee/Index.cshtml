@model IEnumerable<Publicaciones.Web.ViewModels.Models.GetEmpViewModel>

@{
    ViewData["Title"] = "Index";
    // Layout = "~/Views/_ViewImports.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-secondary btn-dark" style="border-radius:10px">Create New Employee</a>
</p>

<body class="text-center" style="font-family:'Times New Roman', Times, serif">
    <div class="card">
        <div class="card-heder" style="background-color:lightgray">
            <h4 class="text-center fw-bold">List of Employees</h4>
            <hr/>
        </div>
        <table class="table table-hover text-center table-striped table-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Joblvl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HireDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JobDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PubName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Joblvl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HireDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PubName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmpID }, new { @class = "btn btn-outline-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.EmpID }, new { @class = "btn btn-outline-success" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.EmpID }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div/>
</body>

<style>
    h1 {
        font-family: 'Times New Roman', Times, serif;
        font-weight: bolder;
        text-align: center;
    }

    table {
        font-family: 'Times New Roman', Times, serif
    }
</style>
